<%= form_with(url: login_path, scope: :session, local: true) do |form| %>
  <div class="danger">
    <%= flash[:danger] %>
  </div>

  <div class="actions">
    <%= form.label :name %> 
    <%= form.password_field :name %> 

    <%= form.label :password %>
    <%= form.password_field :password %>

    <%= form.submit "Log in"%>
  </div>
<% end %>